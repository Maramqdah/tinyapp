<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username) { %>
      <div class="navbar-nav" display="inline-block">
        <span style="margin-right:10px">Logged in as: <%=username["email"]%></span>
        <form method="POST" action="/logout">
        <button type="submit" value="submit" class="btn btn-outline-dark">Logout</button>
      </form>
    </div>
    <% } else { %>
    <div class="navbar-nav">
      <form method="GET" action="/login" style="display: flex">
        <button type="submit" value="submit" class="btn btn-outline-dark" href="/login">Login</button>

      </form>
      <form method="GET" action="/register" style="display: flex">
        <button type="register" value="register" class="btn btn-outline-dark" href="/register">register</button>

      </form>
    </div>
    <% } %>
  </nav>
</header>